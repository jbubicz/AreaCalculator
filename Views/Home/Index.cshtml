@using AreaCalculator.Enums;
@model AreaCalculator.Models.FigureData;
@{
    ViewData["Title"] = "Kalkulator powierzchni figur płaskich";
}

<div class="text-center">
    <h1 class="display-4">Kalkulator powierzchni figur płaskich</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col mt-5 center-c">
            <p class="lead">
                Kalkulator wylicza pole powierzchni dla wybranej dwuwymiarowej figury geometrcznej. Postępuj wg instrukcji.
            </p>
            @using (Html.BeginForm())
            {
                <form method="post">
                    <label for="Shapes" class="mt-1 mb-0">Obliczenia będą wykonane dla figury:</label>
                    <div class="form-group centered m-3">
                        @Html.DropDownListFor(m => m.Shape, new SelectList(Enum.GetValues(typeof(Shapes))),
                       new { @class = "form-control" })
                    </div>
                    <div id="Instruction" class="mt-3 form-group text-info"></div>
                    <div class="centered m-3">
                        <label for="Dimensions">Wymiary [m]:</label>
                        <input id="Dimensions" class="form-control" name="Dimensions" type="text" value="@Model.Dimensions" />
                        <br />
                        <input class="btn btn-primary" type="submit" value="Oblicz" />
                    </div>
                </form>
                <div class="form-group centered m-3">
                    <div id="Result" class="h5 mt-4 px-2 alert-info">@Model.ResultNotification</div>
                </div>
            }
        </div>
    </div>
</div>
